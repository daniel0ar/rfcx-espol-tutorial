<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="cache-control" content="no-store" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <title>@ViewBag.Title</title>
        <link href="~/css/site.css" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/w3.css" rel="stylesheet">     
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/bootstrap-dialog.min.css">
        <link rel="stylesheet" href="~/css/layout.css">
        <link rel="stylesheet" href="~/css/select2.min.css"/>
        
        @RenderSection("Style", required: false)
    </head>
    <body>  
        <div class="nav-side-menu navbar-dark">
            <div class="brand">
                <a href="/home">
                <img src="/images/logo-white.png"/>
                </a>
            </div>
            <button class="navbar-toggler toggle-btn" data-toggle="collapse" data-target="#menu-content"><span class="navbar-toggler-icon"></span></button>
            <div class="menu-list">
                <ul id="menu-content" class="menu-content collapse out">
                    <li id="login-side" class="login"></li>
                    <li data-toggle="collapse" data-target="#monitoreo" class="collapsed">
                        <a href="#"><i class="fa fa-dashboard fa-lg"></i> Monitoreo <span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="monitoreo">
                        <li><a href='@Url.Action("Index","Home")'><div>Estaciones</div></a></li>
                        <li><a href='@Url.Action("Index","Audios")'><div>Audios</div></a></li>
                        <li><a href='@Url.Action("Index","Image")'><div>Imágenes</div></a></li>
                        <li><a href='@Url.Action("Index","Map")'><div>Mapa</div></a></li>
                    </ul>

                    <li data-toggle="collapse" data-target="#historicos" class="collapsed">
                        <a href="#"><i class="fa fa-bar-chart"></i>Históricos<span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="historicos">
                        <li><a href='@Url.Action("ByHour","HistoricalData")'>Por hora</a></li>
                        <li><a href='@Url.Action("ByDate","HistoricalData")'>Por día</a></li>
                        <li><a href='@Url.Action("ByMonth","HistoricalData")'>Por mes</a></li>                               
                        <li><a href='@Url.Action("ByDateStation","HistoricalData")'>Entre estaciones</a></li>                       
                    </ul>
                    <li>
                        <a href='@Url.Action("Index","Alert")'><i class="fa fa-bell fa-lg"></i> <div>Alertas</div> </a>
                    </li>
                    <li>
                        <a href='@Url.Action("Index","Incident")'><i class="fa fa-exclamation-triangle" ></i> <div>Incidentes</div> </a>
                    </li>
                    <li data-toggle="collapse" data-target="#administracion" class="collapsed">
                        <a href="#"><i class="fa fa-wrench fa-lg"></i> Administración <span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="administracion">
                        <li><a href='@Url.Action("Index","Users")'><div>Usuarios</div></a></li>
                    </ul>
                    <li>
                        <a href='@Url.Action("Index","Animal")'> 
                            <i class="fa fa-bug"></i> 
                            <div>Animal</div> 
                        </a>
                    </li>
                </ul>
            </ul>
        </div>
    </div>

    <nav class="navbar navbar-default navbar-fixed-top">
        <ul class="navbar-nav ml-auto mr-5">
            <li class="login"></li>
        </ul>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    <script src="~/js/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/js/bootstrap-dialog.min.js" type="text/javascript"></script>
    <script src="~/js/select2.min.js" type="text/javascript"></script>
    <script src="~/js/es.js" type="text/javascript"></script>
    <script src="~/js/jquery.cookie.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            if (typeof $.cookie('token') === 'undefined') {
                console.log("no cookie");
                $(".login").html("<a href='/Authentication'><i class='fa fa-user fa-lg'></i> Ingresar</a>")
            } else {
                $(".login").html("<a href='/'><i class='fa fa-user fa-lg'></i> Salir</a>")
                $(".login").click(function (e) {
                    $.removeCookie("token", { path: '/' })
                });
            }
        });
    </script>
    @RenderSection("Scripts", required: false)

    @RenderSection("ScriptsIndex", required: false)
    <div style="clear: both;"></div>
    <footer>
        <p id="pie_pagina" style="margin: 0">Bosque Protector Prosperina</p>
    </footer>
</body>
</html>

